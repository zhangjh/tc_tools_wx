@import '/iconfont/iconfont.wxss';

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  /* background-color: #f6f7fb; */
}

/* Topic Dialog Styles */
.dialog {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.dialog-content {
  width: 100%;
  max-height: 70vh;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.dialog-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
}

.dialog-title {
  color: #000;
  font-size: 40rpx;
  font-weight: bold;
}

.dialog-actions {
  display: flex;
  gap: 40rpx;
}

.refresh-btn .iconfont ,
.close-btn .iconfont{
  font-size: 50rpx;
}

.topics-list {
  max-height: 40vh;
  padding: 20rpx;
}

.advice-dialog {
  /* border: 1px solid red; */
  width: 100%;
  position: fixed;
  top: 30%;
  /* background-color: rgba(0, 0, 0, 0.5); */
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.topic-item, .advice-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 32rpx;
  color: #000;
}

.advice-item {
  /* border: 1px solid red; */
  margin: 20rpx;
  padding-top: 0;
  margin-top: 0;
}

.topic-item-hover {
  background-color: #f5f5f5;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

/* 新增新手提示样式 */
.tutor-tip {
  position: absolute;
  left: 150rpx;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0,0,0,0.7);
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  white-space: nowrap;
  animation: fadeOut 3s forwards;
  animation-delay: 3s;
}

@keyframes fadeOut {
  from { opacity: 1; }
  to { opacity: 0; }
}

.avatar image {
  border: 1px solid white;
  background-color: white;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

/* 发音人选择样式 */
.tutor-select {
  max-height: 60vh;
}

.tutor-item {
  padding: 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.tutor-item .name {
  color: #000;
  font-weight: bold;
}

.tutor-item image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}

.tutor-item .play .iconfont {
  font-size: 28px;
  color: #4080ff;
}

/* Chat Content Styles */
.chat-content {
  /* border: 1px solid red; */
  overflow: auto;
  flex: 1;
  padding: 20rpx;
  background-color: #f3f6ff;
}

.model,
.user {
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  max-width: 80%;
  display: flex;
  flex-direction: column;
}

.main {
  display: flex;
  flex-direction: row;
}

.user .main image {
  height: 150rpx;
}

.evaluate {
  border-top: 1px dashed white;
  color: orange;
  display: flex;
}

.operations {
  display: flex;
}

.operations view {
  margin: 0 20rpx;
}

.operations .iconfont {
  padding: 0rpx;
}

.trans-content {
  border-top: 1px dashed white;
}

.evaluate span {
  padding-right: 10rpx;
}

.evaluate .score {
  color: red;
  margin-right: 10rpx;
}

.message-bubble text {
  font-size: 1.1rem;
}

.message-bubble .iconfont {
  font-size: 50rpx;
  padding-left: 10rpx;
}

.model {
  background-color: #4080ff;
  color: white;
}

.user {
  /* border: 1px solid red; */
  background-color: white;
  color: black;
  margin-left: auto;  
}

/* Bottom Toolbar Styles */
.bottom-toolbar {
  /* border: 1px solid red; */
  height: 200rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 40rpx;
}

.btn-group {
  margin: 20rpx 0;
}

.input-controls .mic-btn {
  width: 150rpx;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 50%;
}

.mic-btn {
  background: #4080ff !important;
}

.mic-btn .iconfont {
  color: white;
  font-size: 2.5rem;
}

.cancel-btn {
  /* border: 1px solid gray; */
  position: absolute;
  left: 150rpx;
  margin-top: 20rpx;
}

.cancel-btn .iconfont {
  margin-left: 20rpx;
  color: black;
  font-size: 2rem;
}

/* Voice Wave Animation Styles */
.voice-wave {
  /* border: 1px solid black; */
  display: flex;
  align-items: flex-end;
  justify-content: center;
  min-height: 60rpx;
  width: 100%;
  border-radius: 10rpx;
  /* padding: 10rpx; */
}

.wave-bar {
  width: 6rpx;
  height: 20rpx;
  background: #4080ff;
  margin: 0 4rpx;
  border-radius: 6rpx;
  animation: waveAnimation 1s ease-in-out infinite;
}

.wave-bar:nth-child(1) {
  animation-delay: 0s;
}

.wave-bar:nth-child(2) {
  animation-delay: 0.2s;
}

.wave-bar:nth-child(3) {
  animation-delay: 0.4s;
}

.wave-bar:nth-child(4) {
  animation-delay: 0.6s;
}

@keyframes waveAnimation {
  0%, 100% {
    height: 20rpx;
  }
  50% {
    height: 40rpx;
  }
}