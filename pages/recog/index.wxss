/* pages/recog/index.wxss */
.content {
  border: 1px solid green;
  width: 100%;
  height: 100%;
}

.mask {
  z-index: -1;
  /* mask是绝对定位的，不继承父元素高宽，重新设置 */
  height: 95%;
  width: 95%;
  border: 1px solid red;
  background-blend-mode: multiply;
  background-color: white;
  filter: opacity(0.5);
  background-size: cover;
  background-position: center;
}

