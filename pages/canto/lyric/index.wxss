@import '../canto.wxss';

.content {
  padding: 20rpx;
}

.global-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999; /* 确保遮罩层在其他元素之上 */
}

.filter-bar, .action-bar {
  /* border: 1px solid red; */
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx 0;
}
.filter-bar input,
.action-bar button {
  margin: 0 5rpx;
  padding: 0 20rpx;
  border: 1px solid #ccc;
  border-radius: 5rpx;
  height: 80rpx;
  box-sizing: border-box; 
  display: flex;
  align-items: center;
}

.action-bar button {
  height: 80rpx;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5rpx;
}

.btn-filter {
  margin-right: 10rpx;
}

.cover-img {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
}
.lyric-item {
  border-bottom: 1px solid #ddd;
  padding: 20rpx 0;
}
.lyric-info {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}
.song-name, .singer {
  font-size: 1.2rem;
  font-weight: 400;
  color: darkblue;
}
.song-name {
  width: 90%;
}
.singer {
  text-align: center;
  width: 150rpx;
}
.lyric-content {
  margin-top: 10rpx;
  color: black;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5; /* 设置显示的行数，可以根据需要调整 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
  word-wrap: break-word;
}
.collapsed {
  overflow: hidden;
  white-space: wrap;
  text-overflow: ellipsis;
}
.expanded {
  white-space: normal;
}
.operation-bar {
  margin-top: 10rpx;
}
.operation-bar button {
  width: 100%;
}
.empty-result {
  text-align: center;
  padding: 50rpx;
  color: #999;
  font-size: 28rpx;
}

.search-lyric {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: white;
  padding: 40rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.search-lyric input {
  width: 500rpx; /* 增加宽度 */
  margin-bottom: 20rpx;
  padding: 10rpx;
  border: 1px solid #ccc;
  border-radius: 5rpx;
}

.search-lyric .btn-filter {
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5rpx;
  text-align: center;
}
