/* pages/index/index.wxss */
.container {
  min-height: 100%;
  height: auto;
  background-color: #F0F8FF;
  /* border: 1px solid blue; */
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.content {
  width: 100%;
  padding-bottom: 2rem;
  /* border: 1px solid blue; */
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.wux-grids {
  /* border: 1px solid blue; */
}

.item {
  border: 1px solid whitesmoke;
  height: 180px;
  padding: 5px;
  border-radius: 12px;
  background-color: #F0FAF0; 
  box-shadow: 
      5px 5px 10px #aaa,   /* 右下阴影 */
      -5px -5px 10px #fff; /* 左上高光 */
}

.wux-grid {
  height: 20%;
  /* border: 1px solid red; */
  background-color: #F0F8FF;
}

.item .title {
  font-size: 16px;
  font-weight: 600;
  color: #1f2329;
  margin-bottom: 8px;
}

.item image {
  /* border: 1px solid blue; */
  width: 60px; 
  height: 60px;
  margin: 12px 0;
}

.item .desc {
  font-size: 12px;
  color: #86909c;
  line-height: 1.5;
}

.share-btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  padding: 0;
  margin: 0;
}

/* 去除button的默认样式 */
.share-btn::after {
  border: none;
}