/* pages/voice/index.wxss */
.container {
  width: 100%;
  height: 100%;
  /* border: 1px solid red; */
  /* background-color: rgb(87, 146, 87); */
  background-color: #86bad3;
  color: #fff;
}

.music-container {
  display: flex;
  gap: 10px;
  margin-top: 20px;
  height: 50px;
  /* border: 1px solid red; */
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.note {
  width: 5px;
  height: 20px;
  background-color: #dbe7eb;
  border-radius: 5px;
  animation: jump 2.5s linear infinite;
}

.note1 {
  animation-delay: 0s;
}
.note2 {
  animation-delay: 0.2s;
}
.note3 {
  animation-delay: 0.4s;
}
.note4 {
  animation-delay: 0.6s;
}
.note5 {
  animation-delay: 0.8s;
}
.note6 {
  animation-delay: 0.8s;
}
.note7 {
  animation-delay: 1.0s;
}
.note8 {
  animation-delay: 1.2s;
}
.note9 {
  animation-delay: 1.4s;
}
.note10 {
  animation-delay: 1.6s;
}

@keyframes jump {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20px);
  }
}

.player {
  height: 70vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* background: linear-gradient(180deg, #005580 0%, #003854 100%); */
  overflow: hidden;
}

.player image {
  width: 100px;
  height: 100px;
}

.player .title {
  font-size: 20px;
  /* margin-bottom: 30px; */
  margin: 10px 0;
}

.player .play-control {
  /* border: 1px solid red; */
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 10px;
}

.play-control image {
  width: 24px;
  height: 24px;
}

.timer {
  margin-left: 20px;
}

.card-container {
  width: 100%;
  height: 80%;
  border: 1px solid blue;
  display: flex;
  flex-direction: row;
  justify-content: center;
  overflow-y: auto;
}

.wux-grids {
  background-color: red;
}

.item {
  border: 1px solid red;
  width: 80px;
  height: 80px;
}

.item .title {
  color: black;
}

.item .icon {
  width: 100%;
  height: 48px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.item image {
  width: 32px;
  height: 32px;
}