/**app.wxss**/
@import '/miniprogram_npm/wux-weapp/styles/index.wxss';

page {
  color: grey;
  width: 95vw;
  height: 95vh;
  margin: 10px;
  overflow: auto;
}

.show {
  visibility: visible;
}

.hide {
  visibility: hidden;
}

.none {
  display: none;
}

/* 通用的全宽高居中布局容器类 */
.center-container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* border: 1px solid red; */
}

.large {
  font-size: 1.2rem;
}

.small {
  font-size: 0.8rem;
}

/* view {
  height: 100%;
  width: 100%;
} */

.container {
  /* border: 1px solid blue; */
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
  /* background-color: #F0F8FF; */
} 

.upload-btn {
  width: 90%;
  height: 48px;
  margin: 0 auto;
  background: #00B578;
  color: white;
  font-size: 16px;
  font-weight: 500;
  /* border-radius: 24px; */
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(0,181,120,0.2);
  transition: all 0.3s ease;
}

.upload-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2px 6px rgba(0,181,120,0.15);
}

.feedback {
  /* border: 1px solid red; */
  position: fixed;
  bottom: 1.5rem;
  right: 1rem;
}

.feedback-btn {
  width: 3rem;
  height: 3rem;
  border-radius: 9999px;
  background-color: white;
  margin: 10px 0;
}

.feedback-btn image {
  width: 24px;
  height: 24px;
}

.cube {
  width: 3rem;
  height: 3rem;
  border-radius: 9999px;
  background-color: white;
}