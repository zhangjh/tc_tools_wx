.container {
  padding: 20px;
}

.search-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

input {
  flex: 1;
  height: 40px;
  padding: 0 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  background-color: #f0f0f0;
}

button {
  margin-left: 10px;
  height: 40px;
  padding: 0 15px;
  background-color: #0a1f44;
  color: white;
  border: none;
  border-radius: 5px;
}

.result-title {
  /* border: 1px solid red; */
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-self: flex-start;
  /* font-size: 20px; */
  font-weight: bold;
  margin-bottom: 10px;
}

.book-item {
  width: 95%;
  display: flex;
  margin-bottom: 20px;
  padding: 10px;
  border-radius: 5px;
  border: 1px solid #ddd;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.book-cover {
  width: 100px;
  height: 150px;
  margin-right: 15px;
  border-radius: 5px;
}

.book-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.book-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
  color: #333;
}

.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
}

.page-button {
  background-color: #0a1f44;
  color: white;
  border: none;
  border-radius: 5px;
  height: 40px;
  width: 80px;
  margin: 0 5px;
}

.page-button[disabled] {
  background-color: #ddd;
}

.page-info {
  margin: 0 10px;
  font-size: 16px;
  color: #333;
}