/* pages/doctor/index.wxss */
.content {
  width: 90vw;
  height: 65vh;
  padding: 10px;
  /* border: 1px solid red; */
  overflow-y: auto;
  border-top: 1px solid lightgrey;
  border-bottom: 1px solid lightgrey;
}

.submit {
  width: 90vw;
  height: 35vh;
  padding: 10px;
  /* border: 1px solid blue; */
  overflow-y: auto;
}

.submit textarea {
  width: 100%;
  height: 100%;
  border: 1px solid grey;
  padding: 8px 0 0 8px;
}

.submit-btn {
  width: 100%;
  /* border: 1px solid black; */
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.submit-btn button {
  width: 160px;
  height: 50px;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  background-color: #868b95;
  color: white;
  border-radius: 8px;
}

.icon {
  /* border: 1px solid red; */
}

.text {
  /* border: 1px solid red; */
  font-size: 1.2rem;
}